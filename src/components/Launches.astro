---
import { getLatestLaunches } from '../lib/spacex';
import CardLaunch from '../components/CardLaunch.astro';

const launches = await getLatestLaunches()
---

<div class="gird gap-8 sm:grid-cols-2 lg:grid-cols-3">
  {
    launches.map(
      ({id, links, details, flight_number: flightNumber, success}) =>
      <CardLaunch
        id={id}
        img={links.patch.small}
        details={details}
        flightNumber={flightNumber}
        success={success}
      />
    )
  }
</div>